{
   "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      // "moduleResolution": "bundler",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,

      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"],
         "@public/*": ["./public/*"],
         "@components/*": ["./src/components/*"]
      }
   },
   "include": ["next-env.d.ts", "src/**/*", "**/*.ts", "**/*.tsx", "next.config.js"],
   "exclude": ["node_modules", ".next", "**/*.test.ts", "**/*.spec.ts", "dist", ".vscode", "*.tmp"]
}
